<UserControl x:Class="Chopan.Controls.DirectoryBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chopan.Controls"
             mc:Ignorable="d" 
             Height="50" d:DesignWidth="800">
    <GroupBox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Source/Directory.png" HorizontalAlignment="Left"/>
            <Grid Grid.Column="1">
                <TextBlock x:Name="FN" VerticalAlignment="Center" HorizontalAlignment="Left" Text="xxx.xxx" FontSize="30" FontWeight="Bold" Margin="10,5,0,0"/>
                <Button Click="Delete_Click" x:Name="Delete" Background="Transparent" Margin="0,2,40,2" HorizontalAlignment="Right" BorderBrush="Transparent">
                    <Image Source="/Source/Bin.png"/>
                </Button>
                <Button x:Name="Rename" Click="Rename_Click" Background="Transparent" Margin="0,2,80,2" HorizontalAlignment="Right" BorderBrush="Transparent">
                    <Image Source="/Source/Rename.png"/>
                </Button>
            </Grid>
        </Grid>
    </GroupBox>
</UserControl>
