<Page x:Class="Chopan.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chopan.Pages"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      Background="White"
      AllowDrop="True"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBox x:Name="DirectoryPathShow" Text="/" IsReadOnly="True" Margin="5,5,100,5"/>
            <WrapPanel Width="90" HorizontalAlignment="Right">
                <Button x:Name="ToRoot" Click="ToRoot_Click" HorizontalAlignment="Left" Width="30" Background="Transparent" BorderBrush="Transparent">
                    <Border Width="28" Height="28" Background="LightSkyBlue" CornerRadius="15,15,15,15" BorderThickness="4" BorderBrush="White">
                        <Grid>
                            <TextBlock HorizontalAlignment="Center" Text="/" Foreground="White" FontSize="15" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Button>
                <Button x:Name="Perious" Click="Perious_Click" HorizontalAlignment="Left" Width="30" Background="Transparent" BorderBrush="Transparent">
                    <Border Width="28" Height="28" Background="LightSkyBlue" CornerRadius="15,15,15,15" BorderThickness="4" BorderBrush="White">
                        <Grid>
                            <TextBlock HorizontalAlignment="Center" Text="←" Foreground="White" FontSize="15" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Button>
                <Button x:Name="Next" HorizontalAlignment="Left" Width="30" Background="Transparent" BorderBrush="Transparent">
                    <Border Width="28" Height="28" Background="LightSkyBlue" CornerRadius="15,15,15,15" BorderThickness="4" BorderBrush="White">
                        <Grid>
                            <TextBlock HorizontalAlignment="Center" Text="→" Foreground="White" FontSize="15" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Button>
            </WrapPanel>
        </Grid>
        <Grid Grid.Row="1" x:Name="Drst" DragOver="MoveFileToIt">
            <GroupBox Margin="5">
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="FileDialog"/>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</Page>
